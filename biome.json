{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},

	"files": {
		"ignore": ["*.code-workspace", ".vscode/*"]
	},

	"formatter": {
		"enabled": true,
		"lineEnding": "crlf",
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 120
	},

	"linter": {
		"enabled": true,
		"rules": {"recommended": true},
		"ignore": ["*.code-workspace", ".vscode/*"]
	}
}
